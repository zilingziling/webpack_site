.newsList
  display: flex
  justify-content: space-between
  width: 90%
  margin auto
  margin-bottom: 100px
  .list
    display: block
    width: 22%
    position relative
    transition all .5s
    cursor pointer
    padding: 20px
    border-radius 10px
    text-align left
    overflow: hidden
    padding-bottom: 50px
    p()
    span()
    h6()
    span
      margin-bottom: 20px
    h6
      margin-bottom: 20px
    p
      width: 100%


    .imgbox
      width: 100%
      height: 200px
      overflow: hidden
      transition all  .2s
    &:hover
      box-shadow: 0 0 6px 2px rgba(0, 0, 0, .1)


    .imgBox_1
      background: url("../images/building.png") center / 100% no-repeat;

    .imgBox_2
      background: url("../images/building_2.jpg") center / 100% no-repeat;

    .imgBox_3
      background: url("../images/building_3.jpg") center / 100% no-repeat;

    .imgBox_4
      background: url("../images/building_4.jpg") center / 100% no-repeat;
    .arrow
      width: 30px
      height: 32px
      position absolute
      right: 23px
      background:url("../images/arrows.png");
      background-position: -23px -332px
      transition all  .36s ease

    .invisibleArrow
      content ''
      position absolute
      right  62px
      width: 30px
      height: 55px
      transition all  .36s ease
      background:url("../images/arrows.png");
      background-position: -23px -332px
      opacity 0

    &:hover .imgbox
      background-size 110%
    &:hover  .arrow
        opacity: 0;
        right: 0
    &:hover .invisibleArrow
          opacity 1
          right 27px
