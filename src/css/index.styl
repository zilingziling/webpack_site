// 复用样式
h5()
  h5
    font-weight: 400
    margin-bottom: 5px
    font-size: 20px
    color rgba(68, 68, 68, 1)

span()
  span
    display: block
    font-size 13px
    color rgba(166, 166, 166, 1)

p()
  p
    font-size 14px
    color rgba(128, 128, 128, 1)
    width 68%
    line-height: 34px;

a()
  a
    text-decoration: none
    color #333333

h6()
  h6
    font-size: 16px;
    font-weight: 400;
    color: #333;
    line-height: 1.5;
    word-break: break-all;

header
  width: 100%
  height: 70px
  position: fixed
  top: 0
  left: 0
  background: #fff
  z-index 10
  // X轴偏移 Y轴偏移 模糊 扩散 色值
  box-shadow: 0 2px 6px rgba(0, 0, 0, .1)

  nav
    width calc(100% - 320px)
    height 70px
    margin auto
    display flex
    justify-content space-between
    align-items center


.navUl
  width 33%
  display flex
  flex-direction row
  justify-content: space-between
  align-items center
  list-style none

  .active
    border-bottom 2px solid #333

  li
    width: 80px
    height: 65px
    text-align: center
    cursor pointer
    border-bottom 2px solid transparent

    a
      line-height: 65px

  li:not(active):hover
    border-bottom 2px solid #333

  a
    text-decoration: none
    color: #333333

  .innerUl
    position absolute
    display: none
    list-style none
    padding-left 0
    padding-top 20px
    top: 70px
    left: -40px
    z-index 3

    .companyIntro
      border-top-left-radius 3px
      border-top-right-radius 3px
      box-shadow: 0 1px 6px rgba(0, 0, 0, .15);

    .companyNews
      border-bottom-left-radius 3px
      border-bottom-right-radius 3px
      box-shadow: 0 1px 6px rgba(0, 0, 0, .15);

    li
      width: 160px
      height: 50px
      line-height: 50px
      text-align: center
      background: #ffffff

      &:hover
        background: #f7f7f7
        border-bottom 2px solid transparent

      a
        line-height: 50px

  .aboutLi
    position: relative

    &:hover
      .innerUl
        display: block


.main
  .swiper-container
    width: 100%
    height: 860px
    position relative


  .my-bullet
    width: 13px
    height: 4px
    background-color: rgba(229, 229, 229, .4)
    border-radius 4px
    display: inline-block
    margin: 2px
    cursor pointer
    transition all .3s

    &:not(.my-bullet-active):hover
      width: 26px
      background-color: #e5e5e5

    &.my-bullet-active
      width: 26px
      background-color: #e5e5e5

.history
  display: flex
  justify-content: space-around
  height: 258px
  list-style none
  text-align: center

  li
    display: inline-flex
    align-items: center
    flex-direction: column
    justify-content: center

    h4
      font-size: 32px
      font-weight: 400
      color rgba(68, 68, 68, 1)
      margin: 0

    span
      font-size: 13px
      color rgba(128, 128, 128, 1)

.aboutUs
  height: 1008px
  position relative
  background: url('../images/road.jpg') center / cover no-repeat

  .filler
    height: 408px
    position absolute
    top 300px
    left calc(50% + 50px)
    h5()
    span()

    img
      margin-top: 35px
      margin-bottom: 30px
    p()

// 核心产品样式

.coreProducts
  text-align: center
  padding 0 40px
  margin 125px 0
  h5()

  p
    font-size 14px
    color rgba(128, 128, 128, 1)
    margin-top: 0
    margin-bottom: 100px
  a()

  a
    width: 235px
    height: 40px
    display: inline-block
    border 1px solid #4c4c4c
    line-height: 40px

    &:hover
      background-color: #4c4c4c
      color white

  .products
    display: flex
    justify-content: space-between
    margin-bottom: 100px

    > div
      overflow: hidden

      .a-product
        width: 22%
        height: 264px
        position relative
        transition all .5s

        &:hover
          transform scale(1.1)

        .mask
          width: 410px
          height: 44px
          line-height: 44px
          color white
          background-color alpha(#000, .7)
          position absolute
          bottom: 0
          left: 0

.idea
  height: 800px
  text-align: center
  position relative

  p
    margin 0 auto 115px
  h5()
  p()

  img
    width: 32%
    position absolute
    top: 25%
    left: 15%

  .detail
    background url("../images/background-1.jpg") center / cover no-repeat
    width 100%
    height: 490px
    p()

    p
      width: 34%
      height: 108px
      position absolute
      top: 42%
      right: 13%
      margin-bottom 0
      text-align left

.news
  width: 90%
  margin auto
  text-align: center
  margin-bottom: 150px

  p
    margin auto
  h5()
  p()
  a()

  .news-text
    display: block
    height: 155px
    position: relative
    padding-top: 20px
    transition all .5s ease-out

    span
      position absolute
      right: 8%
      top: 34%
      color: #999;

    &:not(:last-child):before
      content ''
      position absolute
      border-bottom 1px solid #ececec
      width 95%
      height: 0
      bottom: 0
      left: 1%

    &:hover
      box-shadow: 0 0 6px 2px rgba(0, 0, 0, .1)

    p
      text-align left
      margin-left: 3%
    h6()

    h6
      text-align left
      margin-left: 3%
      margin-bottom: 15px

